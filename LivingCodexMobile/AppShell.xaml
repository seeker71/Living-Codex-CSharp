<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="LivingCodexMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:LivingCodexMobile"
    xmlns:views="clr-namespace:LivingCodexMobile.Views"
    Shell.FlyoutBehavior="Flyout">

    <!-- Login Page -->
    <ShellContent
        Title="Login"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="login" />

    <!-- Main App with Tab Navigation -->
    <TabBar Route="main">
        <ShellContent
            Title="Dashboard"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="dashboard" />
            
        <ShellContent
            Title="News"
            Icon="news.png"
            ContentTemplate="{DataTemplate views:NewsFeedPage}"
            Route="news" />
            
        <ShellContent
            Title="Concepts"
            Icon="concept.png"
            ContentTemplate="{DataTemplate views:ConceptDiscoveryPage}"
            Route="concepts" />
            
        <ShellContent
            Title="Explore"
            Icon="explore.png"
            ContentTemplate="{DataTemplate views:NodeExplorerPage}"
            Route="explore" />
    </TabBar>

    <!-- Onboarding Page -->
    <ShellContent
        Title="Onboarding"
        ContentTemplate="{DataTemplate views:OnboardingPage}"
        Route="onboarding" />

    <!-- Detail Pages -->
    <ShellContent
        Title="Concept Detail"
        ContentTemplate="{DataTemplate views:ConceptDetailPage}"
        Route="conceptdetail" />
        
    <ShellContent
        Title="News Detail"
        ContentTemplate="{DataTemplate views:NewsDetailPage}"
        Route="newsdetail" />
        
    <ShellContent
        Title="Node Detail"
        ContentTemplate="{DataTemplate views:NodeDetailPage}"
        Route="nodedetail" />
        
    <ShellContent
        Title="Edge Detail"
        ContentTemplate="{DataTemplate views:EdgeDetailPage}"
        Route="edgedetail" />

</Shell>
