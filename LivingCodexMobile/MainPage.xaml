<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LivingCodexMobile.MainPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:DataType="viewmodel:LoginViewModel"
             xmlns:viewmodel="clr-namespace:LivingCodexMobile.ViewModels"
             Title="{Binding Title}">

    <ScrollView>
        <Grid RowDefinitions="*,Auto" 
              Padding="20,40">
            <StackLayout Grid.Row="0" 
                         VerticalOptions="Center"
                         Spacing="20">
                
                <!-- Logo and Title -->
                <Image Source="dotnet_bot.png"
                       SemanticProperties.Description="Living Codex Logo"
                       HeightRequest="120"
                       HorizontalOptions="Center" />

                <Label Text="Living Codex"
                       FontSize="32"
                       FontAttributes="Bold"
                       HorizontalOptions="Center"
                       TextColor="#512BD4" />

                <Label Text="Connect. Contribute. Resonate."
                       FontSize="18"
                       HorizontalOptions="Center"
                       TextColor="Gray" />

                <!-- Login/Register Form -->
                <Frame BackgroundColor="White"
                       CornerRadius="10"
                       Padding="20"
                       Margin="0,20,0,0">
                    <StackLayout Spacing="15">
                        
                        <!-- Mode Toggle -->
                        <Button Text="{Binding IsLoginMode, Converter={StaticResource BoolToLoginTextConverter}}"
                                Command="{Binding ToggleModeCommand}"
                                BackgroundColor="Transparent"
                                TextColor="#512BD4"
                                FontSize="14" />

                        <!-- Username -->
                        <Entry Placeholder="Username"
                               Text="{Binding Username}"
                               BackgroundColor="LightGray" />

                        <!-- Email (only for registration) -->
                        <Entry Placeholder="Email"
                               Text="{Binding Email}"
                               BackgroundColor="LightGray"
                               IsVisible="{Binding IsLoginMode, Converter={StaticResource InvertedBoolConverter}}" />

                        <!-- Password -->
                        <Entry Placeholder="Password"
                               Text="{Binding Password}"
                               IsPassword="True"
                               BackgroundColor="LightGray" />

                        <!-- Error Message -->
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="Red"
                               FontSize="12"
                               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}" />

                        <!-- Login/Register Button -->
                        <Button Text="{Binding IsLoginMode, Converter={StaticResource BoolToButtonTextConverter}}"
                                Command="{Binding LoginCommand}"
                                BackgroundColor="#512BD4"
                                TextColor="White"
                                HeightRequest="45"
                                FontSize="16"
                                FontAttributes="Bold" />

                        <!-- Alternative Action Button -->
                        <Button Text="{Binding IsLoginMode, Converter={StaticResource BoolToAltButtonTextConverter}}"
                                Command="{Binding RegisterCommand}"
                                BackgroundColor="Transparent"
                                TextColor="#512BD4"
                                FontSize="14"
                                IsVisible="{Binding IsLoginMode, Converter={StaticResource InvertedBoolConverter}}" />

                        <!-- OAuth Divider -->
                        <StackLayout Orientation="Horizontal" 
                                     Spacing="10" 
                                     Margin="0,20,0,10">
                            <BoxView Color="LightGray" 
                                     HeightRequest="1" 
                                     VerticalOptions="Center" 
                                     HorizontalOptions="FillAndExpand" />
                            <Label Text="OR" 
                                   TextColor="Gray" 
                                   FontSize="12" 
                                   VerticalOptions="Center" />
                            <BoxView Color="LightGray" 
                                     HeightRequest="1" 
                                     VerticalOptions="Center" 
                                     HorizontalOptions="FillAndExpand" />
                        </StackLayout>

                        <!-- OAuth Login Buttons -->
                        <Button Text="Continue with Google"
                                Command="{Binding GoogleLoginCommand}"
                                BackgroundColor="White"
                                TextColor="Black"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                HeightRequest="45"
                                FontSize="16" />

                        <Button Text="Continue with Microsoft"
                                Command="{Binding MicrosoftLoginCommand}"
                                BackgroundColor="White"
                                TextColor="Black"
                                BorderColor="LightGray"
                                BorderWidth="1"
                                HeightRequest="45"
                                FontSize="16" />

                    </StackLayout>
                </Frame>

            </StackLayout>

            <!-- Footer -->
            <StackLayout Grid.Row="1" 
                         Spacing="10">
                <Label Text="Welcome to the Living Codex ecosystem"
                       FontSize="14"
                       HorizontalOptions="Center"
                       TextColor="Gray" />
                
                <Label Text="Where knowledge flows and resonates"
                       FontSize="12"
                       HorizontalOptions="Center"
                       TextColor="LightGray" />
            </StackLayout>
        </Grid>
    </ScrollView>

</ContentPage>