<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LivingCodexMobile.Views.NodeExplorerPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:LivingCodexMobile.Models"
             Title="Node Explorer">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Text="{Binding SearchQuery}"
                   Placeholder="Search nodes, edges, or content..."
                   SearchCommand="{Binding SearchCommand}"
                   Margin="10" />

        <!-- Content View -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!-- Toolbar -->
            <StackLayout Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Text="Refresh Nodes" 
                        Command="{Binding LoadNodesCommand}"
                        BackgroundColor="LightBlue" />
                <Button Text="Load Edges" 
                        Command="{Binding LoadEdgesCommand}"
                        BackgroundColor="LightGreen" />
            </StackLayout>

            <!-- Nodes List -->
            <CollectionView Grid.Row="1" 
                            ItemsSource="{Binding Nodes}"
                            SelectionMode="Single"
                            SelectionChanged="OnNodeSelected">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Node">
                        <Grid Padding="10" BackgroundColor="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Label Grid.Row="0" 
                                   Text="{Binding Title, StringFormat='Title: {0}'}"
                                   FontSize="16" 
                                   FontAttributes="Bold" />
                            
                            <Label Grid.Row="1" 
                                   Text="{Binding Id, StringFormat='ID: {0}'}"
                                   FontSize="12" 
                                   TextColor="Gray" />
                            
                            <Label Grid.Row="2" 
                                   Text="{Binding TypeId, StringFormat='Type: {0}'}"
                                   FontSize="12" 
                                   TextColor="Blue" />
                            
                            <Label Grid.Row="3" 
                                   Text="{Binding State, StringFormat='State: {0}'}"
                                   FontSize="12" 
                                   TextColor="Green" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </Grid>
</ContentPage>