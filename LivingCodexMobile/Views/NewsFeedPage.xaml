<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LivingCodexMobile.Views.NewsFeedPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:LivingCodexMobile.ViewModels"
             xmlns:models="clr-namespace:LivingCodexMobile.Models"
             Title="News Feed"
             x:DataType="vm:NewsFeedViewModel">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Search Bar -->
        <SearchBar Grid.Row="0"
                   Text="{Binding SearchQuery}"
                   Placeholder="Search news..."
                   SearchCommand="{Binding SearchNewsCommand}"
                   Margin="10" />

        <!-- Filter Bar -->
        <ScrollView Grid.Row="1" Margin="10,0">
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="Feed" 
                        Command="{Binding LoadNewsFeedCommand}"
                        BackgroundColor="LightBlue" />
                <Button Text="Trending" 
                        Command="{Binding LoadTrendingCommand}"
                        BackgroundColor="Orange" />
                <Button Text="Unread Only" 
                        Command="{Binding ToggleUnreadFilterCommand}"
                        BackgroundColor="{Binding ShowUnreadOnly, Converter={StaticResource BoolToFilterColorConverter}}" />
                <Button Text="Refresh" 
                        Command="{Binding RefreshCommand}"
                        BackgroundColor="Green" />
            </StackLayout>
        </ScrollView>

        <!-- News Items List -->
        <CollectionView Grid.Row="2" 
                        ItemsSource="{Binding NewsItems}"
                        SelectionMode="Single"
                        SelectionChanged="OnNewsItemSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:NewsItem">
                    <Grid Padding="15" BackgroundColor="White" Margin="0,0,0,10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- News Title -->
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="{Binding Title}" 
                               FontSize="16" 
                               FontAttributes="Bold"
                               MaxLines="2" />

                        <!-- Actions -->
                        <StackLayout Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Spacing="5">
                            <Button Text="Concepts" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NewsFeedViewModel}}, Path=ExtractConceptsCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Purple"
                                    FontSize="10"
                                    Padding="8,4" />
                            <Button Text="Related" 
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type vm:NewsFeedViewModel}}, Path=LoadRelatedNewsCommand}"
                                    CommandParameter="{Binding .}"
                                    BackgroundColor="Blue"
                                    FontSize="10"
                                    Padding="8,4" />
                        </StackLayout>

                        <!-- Description -->
                        <Label Grid.Row="1" Grid.ColumnSpan="2"
                               Text="{Binding Description}"
                               FontSize="14"
                               TextColor="Gray"
                               MaxLines="3"
                               Margin="0,5,0,0" />

                        <!-- Source and Date -->
                        <StackLayout Grid.Row="2" Grid.ColumnSpan="2" 
                                     Margin="0,5,0,0">
                            <Label Text="{Binding Source}" 
                                   FontSize="12" 
                                   TextColor="Blue" />
                            <Label Text="{Binding PublishedAt, StringFormat=' â€¢ {0:MMM dd, yyyy}'}" 
                                   FontSize="12" 
                                   TextColor="Gray" 
                                   Margin="10,0,0,0" />
                        </StackLayout>

                        <!-- Categories and Tags -->
                        <CollectionView Grid.Row="3" Grid.ColumnSpan="2"
                                        ItemsSource="{Binding Categories}"
                                        Margin="0,5,0,0">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame BackgroundColor="LightBlue" 
                                           Padding="6,3" 
                                           Margin="0,0,5,0"
                                           CornerRadius="8">
                                        <Label Text="{Binding .}" 
                                               FontSize="10" 
                                               TextColor="Blue" />
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="2" 
                           IsVisible="{Binding IsLoading}"
                           IsRunning="{Binding IsLoading}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />
    </Grid>
</ContentPage>