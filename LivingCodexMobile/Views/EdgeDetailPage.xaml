<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LivingCodexMobile.Views.EdgeDetailPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:LivingCodexMobile.Models"
             Title="Edge Details"
             x:DataType="models:Edge">

    <ScrollView>
        <StackLayout Padding="20" Spacing="15">
            
            <!-- Edge Header -->
            <Frame BackgroundColor="LightGreen" Padding="15">
                <StackLayout>
                    <Label Text="{Binding Role, StringFormat='Role: {0}'}" 
                           FontSize="20" 
                           FontAttributes="Bold" />
                    <Label Text="{Binding FromId, StringFormat='From: {0}'}" 
                           FontSize="14" 
                           TextColor="Blue" />
                    <Label Text="{Binding ToId, StringFormat='To: {0}'}" 
                           FontSize="14" 
                           TextColor="Green" />
                </StackLayout>
            </Frame>

            <!-- Weight -->
            <Frame BackgroundColor="White" Padding="15">
                <StackLayout>
                    <Label Text="Weight" 
                           FontSize="16" 
                           FontAttributes="Bold" />
                    <Label Text="{Binding Weight, StringFormat='Weight: {0}'}" 
                           FontSize="14" />
                </StackLayout>
            </Frame>

            <!-- Metadata -->
            <Frame BackgroundColor="LightGray" Padding="15">
                <StackLayout>
                    <Label Text="Metadata" 
                           FontSize="16" 
                           FontAttributes="Bold" />
                    <Label x:Name="MetadataLabel" 
                           FontSize="12" 
                           FontFamily="Courier" />
                </StackLayout>
            </Frame>

            <!-- Timestamps -->
            <Frame BackgroundColor="White" Padding="15">
                <StackLayout>
                    <Label Text="Timestamps" 
                           FontSize="16" 
                           FontAttributes="Bold" />
                    <Label Text="{Binding CreatedAt, StringFormat='Created: {0:yyyy-MM-dd HH:mm:ss}'}" 
                           FontSize="14" />
                </StackLayout>
            </Frame>

            <!-- Actions -->
            <StackLayout Orientation="Horizontal" Spacing="10">
                <Button Text="View From Node" 
                        Clicked="OnViewFromNodeClicked"
                        BackgroundColor="Blue" />
                <Button Text="View To Node" 
                        Clicked="OnViewToNodeClicked"
                        BackgroundColor="Green" />
                <Button Text="Edit" 
                        Clicked="OnEditClicked"
                        BackgroundColor="Orange" />
            </StackLayout>

        </StackLayout>
    </ScrollView>
</ContentPage>
