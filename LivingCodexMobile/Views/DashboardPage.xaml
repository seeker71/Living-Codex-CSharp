<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="LivingCodexMobile.Views.DashboardPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:DataType="viewmodel:DashboardViewModel"
             xmlns:viewmodel="clr-namespace:LivingCodexMobile.ViewModels"
             xmlns:model="clr-namespace:LivingCodexMobile.Models"
             Title="{Binding Title}">

    <RefreshView IsRefreshing="{Binding IsBusy}"
                 Command="{Binding RefreshCommand}">
        <ScrollView>
            <StackLayout Padding="20" Spacing="20">
                
                <!-- Header -->
                <StackLayout Orientation="Horizontal" 
                             HorizontalOptions="FillAndExpand">
                    <Label Text="Welcome back!"
                           FontSize="24"
                           FontAttributes="Bold"
                           VerticalOptions="Center" />
                    <Label Text="{Binding IsConnected, Converter={StaticResource ConnectionStatusConverter}}"
                           FontSize="12"
                           VerticalOptions="Center"
                           HorizontalOptions="EndAndExpand" />
                    <StackLayout Orientation="Horizontal" 
                                 HorizontalOptions="End" 
                                 Spacing="10">
                        <Button Text="Refresh"
                                Command="{Binding RefreshCommand}"
                                BackgroundColor="Transparent"
                                TextColor="#512BD4" />
                        <Button Text="Logout"
                                Command="{Binding LogoutCommand}"
                                BackgroundColor="Transparent"
                                TextColor="Red" />
                    </StackLayout>
                </StackLayout>

                <!-- Energy Cards -->
                <Grid ColumnDefinitions="*,*" 
                      RowDefinitions="Auto,Auto" 
                      ColumnSpacing="10">
                    
                    <!-- Collective Energy -->
                    <Frame Grid.Column="0" 
                           BackgroundColor="#E3F2FD"
                           CornerRadius="10"
                           Padding="15">
                        <StackLayout>
                            <Label Text="Collective Energy"
                                   FontSize="14"
                                   TextColor="Gray" />
                            <Label Text="{Binding CollectiveEnergy, StringFormat='{0:F1}'}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#1976D2" />
                        </StackLayout>
                    </Frame>

                    <!-- Contributor Energy -->
                    <Frame Grid.Column="1" 
                           BackgroundColor="#F3E5F5"
                           CornerRadius="10"
                           Padding="15">
                        <StackLayout>
                            <Label Text="Your Energy"
                                   FontSize="14"
                                   TextColor="Gray" />
                            <Label Text="{Binding ContributorEnergy, StringFormat='{0:F1}'}"
                                   FontSize="24"
                                   FontAttributes="Bold"
                                   TextColor="#7B1FA2" />
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Recent Concepts -->
                <StackLayout>
                    <Label Text="Recent Concepts"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,10,0,10" />
                    
                    <CollectionView ItemsSource="{Binding RecentConcepts}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Concept">
                                <Grid Padding="10" ColumnDefinitions="*,Auto">
                                    <StackLayout Grid.Column="0">
                                        <Label Text="{Binding Name}"
                                               FontSize="16"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Description}"
                                               FontSize="12"
                                               TextColor="Gray"
                                               MaxLines="2" />
                                    </StackLayout>
                                    <StackLayout Grid.Column="1" 
                                                 VerticalOptions="Center">
                                        <Label Text="{Binding Resonance, StringFormat='{0:F1}'}"
                                               FontSize="14"
                                               TextColor="#512BD4"
                                               HorizontalOptions="End" />
                                        <Label Text="Resonance"
                                               FontSize="10"
                                               TextColor="Gray"
                                               HorizontalOptions="End" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

                <!-- Recent Contributions -->
                <StackLayout>
                    <Label Text="Recent Contributions"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,10,0,10" />
                    
                    <CollectionView ItemsSource="{Binding RecentContributions}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="model:Contribution">
                                <Grid Padding="10" ColumnDefinitions="*,Auto">
                                    <StackLayout Grid.Column="0">
                                        <Label Text="{Binding Content}"
                                               FontSize="14"
                                               MaxLines="2" />
                                        <Label Text="{Binding CreatedAt, StringFormat='{0:MMM dd, yyyy}'}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </StackLayout>
                                    <StackLayout Grid.Column="1" 
                                                 VerticalOptions="Center">
                                        <Label Text="{Binding Energy, StringFormat='{0:F1}'}"
                                               FontSize="14"
                                               TextColor="#512BD4"
                                               HorizontalOptions="End" />
                                        <Label Text="Energy"
                                               FontSize="10"
                                               TextColor="Gray"
                                               HorizontalOptions="End" />
                                    </StackLayout>
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </StackLayout>

            </StackLayout>
        </ScrollView>
    </RefreshView>

</ContentPage>
