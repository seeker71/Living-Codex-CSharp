<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LivingCodexMobile.Views.FlyoutMenuPage"
             Title="Menu"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#1C1C1E}">

    <ScrollView>
        <StackLayout Padding="20" Spacing="10">
            
            <!-- User Profile Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#2C2C2E}" 
                   Padding="15" 
                   CornerRadius="10"
                   Margin="0,0,0,20">
                <StackLayout>
                    <Label Text="Welcome to Living Codex" 
                           FontSize="18" 
                           FontAttributes="Bold" 
                           TextColor="{AppThemeBinding Light=Black, Dark=White}" />
                    <Label Text="Explore consciousness through fractal knowledge" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#CCCCCC}" />
                </StackLayout>
            </Frame>

            <!-- Navigation Menu -->
            <StackLayout Spacing="5">
                
                <!-- Dashboard -->
                <Button Text="🏠 Dashboard" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnDashboardClicked" />
                
                <!-- News Feed -->
                <Button Text="📰 News Feed" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnNewsClicked" />
                
                <!-- Concept Discovery -->
                <Button Text="🧠 Concept Discovery" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnConceptsClicked" />
                
                <!-- Node Explorer -->
                <Button Text="🔍 Node Explorer" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnExploreClicked" />
                
                <!-- Search -->
                <Button Text="🔎 Search" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnSearchClicked" />
                
            </StackLayout>

            <!-- Divider -->
            <BoxView HeightRequest="1" 
                     BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3C}" 
                     Margin="0,20" />

            <!-- Settings & Profile -->
            <StackLayout Spacing="5">
                
                <!-- Profile -->
                <Button Text="👤 Profile" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnProfileClicked" />
                
                <!-- Settings -->
                <Button Text="⚙️ Settings" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnSettingsClicked" />
                
                <!-- Help -->
                <Button Text="❓ Help &amp; Support" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnHelpClicked" />
                
                <!-- About -->
                <Button Text="ℹ️ About" 
                        BackgroundColor="Transparent" 
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        HorizontalOptions="Fill"
                        Padding="15,10"
                        Clicked="OnAboutClicked" />
                
            </StackLayout>

            <!-- Divider -->
            <BoxView HeightRequest="1" 
                     BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3C}" 
                     Margin="0,20" />

            <!-- Logout -->
            <Button Text="🚪 Logout" 
                    BackgroundColor="#FF4444" 
                    TextColor="White"
                    HorizontalOptions="Fill"
                    Padding="15,10"
                    Clicked="OnLogoutClicked" />

        </StackLayout>
    </ScrollView>

</ContentPage>
