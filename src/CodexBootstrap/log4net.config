<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <log4net>
    <!-- Console Appender -->
    <appender name="ConsoleAppender" type="log4net.Appender.ConsoleAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>

    <!-- File Appender -->
    <appender name="FileAppender" type="log4net.Appender.RollingFileAppender">
      <file value="/Users/ursmuff/source/Living-Codex-CSharp/logs/codex-bootstrap.log" />
      <appendToFile value="true" />
      <rollingStyle value="Size" />
      <maxSizeRollBackups value="10" />
      <maximumFileSize value="10MB" />
      <staticLogFileName value="true" />
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>

    <!-- Debug Appender for detailed debugging -->
    <appender name="DebugAppender" type="log4net.Appender.DebugAppender">
      <layout type="log4net.Layout.PatternLayout">
        <conversionPattern value="%date{yyyy-MM-dd HH:mm:ss.fff} [%thread] %-5level %logger{1} - %message%newline" />
      </layout>
    </appender>

    <!-- Root Logger -->
    <root>
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
    </root>

    <!-- Specific Logger for RouteDiscovery -->
    <logger name="CodexBootstrap.Runtime.RouteDiscovery">
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="DebugAppender" />
    </logger>

    <!-- Specific Logger for ApiRouter -->
    <logger name="CodexBootstrap.Core.ApiRouter">
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="DebugAppender" />
    </logger>

    <!-- Specific Logger for CoreApiService -->
    <logger name="CodexBootstrap.Runtime.CoreApiService">
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="DebugAppender" />
    </logger>

    <!-- Specific Logger for ModuleLoader -->
    <logger name="CodexBootstrap.Runtime.ModuleLoader">
      <level value="INFO" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
    </logger>

    <!-- Specific Logger for Modules -->
    <logger name="CodexBootstrap.Modules">
      <level value="DEBUG" />
      <appender-ref ref="ConsoleAppender" />
      <appender-ref ref="FileAppender" />
      <appender-ref ref="DebugAppender" />
    </logger>

    <!-- Suppress Microsoft logging -->
    <logger name="Microsoft" additivity="false">
      <level value="WARN" />
      <appender-ref ref="ConsoleAppender" />
    </logger>

    <!-- Suppress System logging -->
    <logger name="System" additivity="false">
      <level value="WARN" />
      <appender-ref ref="ConsoleAppender" />
    </logger>
  </log4net>
</configuration>
